# OpenRouter API Settings
OPENROUTER_API_KEY=sk-or-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=openai/gpt-4o
DEFAULT_REVIEW_MODEL=openai/gpt-4o

# Translation Settings
TRANSLATION_TEMPERATURE=0.3
REVIEW_TEMPERATURE=0.2
MAX_REVIEW_ITERATIONS=2

# Bible Settings
DEFAULT_BIBLE_VERSION=CCB
BIBLEGATEWAY_URL=https://www.biblegateway.com/passage/

# Font Settings
LATIN_FONT=Microsoft YaHei
EAST_ASIAN_FONT=Microsoft YaHei
FONT_SIZE_PT=14

# Chunking Settings
# Smaller chunks prevent output truncation; paragraphs are retried individually if missed
MAX_TOKENS_PER_CHUNK=1500
MAX_PARAGRAPHS_PER_CHUNK=5

# Logging Settings
LOG_FILE=logs/sermon-translate.log
